package projectSinceDay2;

public class Payment {
	private Order order;
	public Payment(Order order) {
		this.order=order;
	}
	public void printCustomerPayment () {
		System.out.println("Money of Bill: "+this.order.getTotalDate()+" USD.");
	}
	public void printAllBillCustomerPayment () {
		System.out.println("Money of Bill: "+this.order.getTotalDate()+" USD.\n"
				+"Date of stay: "+this.order.getTotalDate()+".\n"
				+"Date print to Order: "+this.order.getDateOutOrder());
	}
}
